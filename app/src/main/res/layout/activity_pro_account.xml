<?xml version="1.0" encoding="utf-8"?>
<ScrollView   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    tools:context=".joinDoc.ProAccountActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_margin="10dp"
            android:src="@drawable/ic_black_back"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <LinearLayout
            android:gravity="center_vertical|end"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >
            <TextView
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="معلومات احترافية"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:text="2"
                android:textSize="16dp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:background="@drawable/circle"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:ems="10"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="دع المشترين المحتملين يعرفون أفضل ما تفعله و كيف اكتسبت مهاراتك و شهادتك و خبراتك"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/addALanguageId"
                android:visibility="visible"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layoutDirection="rtl"
                    android:id="@+id/khidmaId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <Spinner
                    android:id="@+id/mihnaId"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layoutDirection="rtl" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="*"
                android:textColor="@color/colorGrey"
                android:textSize="25dp" />
            <TextView
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مهنتك"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupPro"
                android:layout_width="300dp"
                app:chipSpacingHorizontal="2dp"
                android:layout_height="wrap_content">

            </com.google.android.material.chip.ChipGroup>
            <TextView
                android:id="@+id/addNewId"
                android:textSize="16dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorGrey"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ اضافة جديد "
                />



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical|end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
       <Spinner
           android:layout_marginTop="10dp"
           android:layout_weight="1"
           android:layoutDirection="rtl"
           android:id="@+id/khibraId"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            />
            <TextView

                android:text=" مستوى الخبرة"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:paddingHorizontal="30dp"
                android:paddingVertical="5dp"
              android:id="@+id/skillsId"
              android:layout_marginRight="10dp"
              android:textColor="#7A7878"
                android:hint="مهارتك"
                android:gravity="center"
              android:background="@drawable/shape_input"
                android:textSize="15dp"
              android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>


            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="*"
                android:textColor="@color/colorGrey"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="مهارتك"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

     <LinearLayout
         android:layout_marginTop="40dp"
         android:layout_marginRight="20dp"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
         <EditText
             android:paddingHorizontal="40dp"
             android:paddingVertical="8dp"
             android:id="@+id/koliya_nameId"
             android:textSize="14dp"
             android:layout_marginRight="10dp"
             android:textColor="#7A7878"
             android:background="@drawable/shape_input"
             android:hint="اسم الكلية"
             android:gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         <EditText
             android:id="@+id/balad_koliyaId"
             android:paddingHorizontal="40dp"
             android:paddingVertical="8dp"
             android:textSize="14dp"
             android:layout_marginRight="10dp"
             android:textColor="#7A7878"
             android:background="@drawable/shape_input"
             android:hint="بلد الكلية او الجامعة"
             android:gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="التعليم"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
     <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

         <EditText
            android:id="@+id/degree_yearId"
             android:paddingVertical="5dp"
             android:paddingHorizontal="15dp"
             android:textSize="14dp"
             android:layout_marginRight="10dp"
             android:textColor="#7A7878"
             android:background="@drawable/shape_input"
             android:hint="عام"
             android:gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>




         <EditText
             android:id="@+id/degree_scienceId"
             android:paddingHorizontal="40dp"
             android:paddingVertical="5dp"
             android:textSize="14dp"
             android:layout_marginRight="10dp"
             android:textColor="#7A7878"
             android:background="@drawable/shape_input"
             android:hint="الدرجة العلمية"
             android:gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
     </LinearLayout>




        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginRight="5dp"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/Certified_yearId"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
                android:textSize="14dp"
                android:layout_marginRight="10dp"
                android:textColor="#7A7878"
                android:background="@drawable/shape_input"
                android:hint="عام"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/CertifiedId"
                android:textSize="14dp"
                android:layout_marginRight="10dp"
                android:textColor="#7A7878"
                android:background="@drawable/shape_input"
                android:text="معتمدة من"
                android:gravity="center"
                android:layout_width="130dp"
                android:layout_height="40dp"/>
            <EditText
                android:id="@+id/certificateId"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:textSize="14dp"
                android:layout_marginRight="10dp"
                android:textColor="#7A7878"
                android:background="@drawable/shape_input"
                android:hint="شهادة او جائزة"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="شهادة"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/continueProbtnID"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="استمرار"
            android:background="@drawable/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</ScrollView>
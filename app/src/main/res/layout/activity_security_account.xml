<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".joinDoc.SecurityAccount">

    <LinearLayout
        android:padding="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_margin="10dp"
            android:src="@drawable/ic_black_back"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <LinearLayout
            android:gravity="center_vertical|end"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >
            <TextView
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="معلومات احترافية"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:text="2"
                android:textSize="16dp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:background="@drawable/circle"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:ems="10"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="دع المشترين المحتملين يعرفون أفضل ما تفعله و كيف اكتسبت مهاراتك و شهادتك و خبراتك"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>




        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="البريد الالكتروني"
                />
            <ImageView
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:src="@drawable/ic_baseline_email_24"
                />
        </LinearLayout>
 <EditText
     android:id="@+id/emailVerifyId"
     android:layout_margin="20dp"
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:background="@drawable/shape_input"
     />
        <LinearLayout
            android:layout_marginRight="10dp"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رقم الهاتف"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_phone_24"
                />

        </LinearLayout>
        <EditText
            android:id="@+id/phoneVerifyId"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_input"
            />
        <Button
            android:id="@+id/continueProbtnID"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="استمرار"
            android:background="@drawable/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
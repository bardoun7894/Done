<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/register"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
     android:layout_centerInParent="true"
        android:layout_marginHorizontal="35dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
   <TextView
    android:textStyle="bold"
     android:layout_marginRight="10dp"
    android:textColor="@color/colorPrimary"
    android:text="اسم المستخدم"
    android:textSize="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />
  <EditText
      android:id="@+id/usernameId"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:background="@drawable/login_edittext_background"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            />
          <Space
           android:layout_width="0dp"
           android:layout_height="10dp"/>
        <TextView
            android:textStyle="bold"

            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimary"
            android:text="البريد الالكتروني"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/emailRegisterId"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:background="@drawable/login_edittext_background"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="10dp"/>
        <TextView
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimary"
            android:text="كلمة المرور"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/passwordRegisterId"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:background="@drawable/login_edittext_background"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioGroup
            android:id="@+id/radio_group_id"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/sell_radio_id"
                android:gravity="center"
                android:text="بائع"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:gravity="center"
                android:id="@+id/buy_radio_id"
                android:text="مشتري"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </RadioGroup>

    </LinearLayout>
        <Button
            android:id="@+id/registerButtonId"
            android:layout_marginTop="10dp"
            android:text="التسجيل"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/raduis_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/youhaveAccountId"
            android:textColor="#898E91"
            android:textStyle="bold"
            android:text=" هل لديك حساب ؟ اضغط هنا "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>
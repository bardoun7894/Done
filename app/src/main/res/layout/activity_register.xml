<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/register"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
 android:layout_marginTop="250dp"
        android:layout_marginHorizontal="35dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<TextView
    android:textStyle="bold"
     android:layout_marginRight="10dp"
    android:textColor="@color/colorPrimary"
    android:text="اسم المستخدم"
    android:textSize="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />
  <EditText
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:background="@drawable/login_edittext_background"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            />
          <Space
           android:layout_width="0dp"
           android:layout_height="10dp"/>
        <TextView
            android:textStyle="bold"

            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimary"
            android:text="البريد الالكتروني"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:background="@drawable/login_edittext_background"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="10dp"/>
        <TextView
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimary"
            android:text="كلمة المرور"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:background="@drawable/login_edittext_background"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="10dp"/>
        <Button
            android:layout_marginTop="10dp"
            android:text="التسجيل"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/raduis_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/youhaveAccount"
            android:textColor="#898E91"
            android:textStyle="bold"
            android:text=" هل لديك حساب ؟ اضغط هنا "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>
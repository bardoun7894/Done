<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:background="@drawable/search_background"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

           <LinearLayout
               android:orientation="horizontal"
               android:background="@color/colorWhite"
               android:layout_width="match_parent"
               android:layout_height="match_parent">



               <LinearLayout
                   android:orientation="vertical"
                   android:layout_weight="1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   >
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                     android:layout_width="match_parent"
                     android:layout_height="30dp">
                     <ImageView
                   android:src="@drawable/ic_favourite"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
                    <LinearLayout
                   android:layout_marginHorizontal="5dp"
                   android:gravity="end"
                   android:layout_weight="1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/rating_numberID"
                       android:textStyle="bold"
                       android:layout_marginRight="10dp"
                       android:textSize="16dp"
                       android:text="5.0"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

                   <ImageView
                       android:src="@drawable/ic_star_rate"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </LinearLayout>

              </LinearLayout>
                   <TextView
                       android:id="@+id/desc_serviceId"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:text=" هنا وصف بسيط للخدمة المقدمة"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

              <TextView
                android:id="@+id/price_service"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:text="يبدأ من 50 ريال"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

               </LinearLayout>

               <ImageView

                   android:layout_gravity="start"
                   android:scaleType="fitXY"
                   android:id="@+id/image_service_searchId"
                   android:src="@drawable/tasmim_ghilaf"
                   android:layout_width="100dp"
                   android:layout_height="match_parent"/>






           </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
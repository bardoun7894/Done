<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:orientation="vertical"
    android:padding="20dp"

    tools:context=".joinDoc.AccountConnected">
    <ImageView
        android:layout_margin="10dp"
        android:src="@drawable/ic_black_back"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <LinearLayout
        android:gravity="center_vertical|end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="الحسابات المرتبطة"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:text="3"
            android:textSize="16dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:background="@drawable/circle"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="16dp"
            android:text=" عند التحقق من حسابك و ربطها تتمكن من ترقية مصداقيتك و مساعدتنا في تزويدك بمزيد من الأعمال"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:ems="10"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="معلوماتك ستبقى خاصة و ستظل دائما"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <TextView
        android:layout_marginTop="60dp"
        android:ems="10"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text=" حضورك الاجماعي"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:id="@+id/googleId"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <TextView
           android:textStyle="bold"
           android:layout_marginRight="20dp"
           android:textColor="#000000"
           android:textSize="20dp"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="قوقل"
           />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/search"
        />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/facebookId"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <TextView
           android:layout_marginRight="20dp"
           android:textColor="#000000"
           android:textSize="20dp"
           android:textStyle="bold"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="فيسبوك"
           />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/facebook"
        />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <TextView
           android:textStyle="bold"
           android:layout_marginRight="20dp"
           android:textColor="#000000"
           android:textSize="20dp"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="تويتر"
           />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/twitter"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/continueAccountConnectBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/register"
            android:text="استمرار"

            />

    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2"
    android:layout_height="match_parent"
    tools:context=".JoinAsActivity">

    <LinearLayout
    android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_black_back"
            />
        <TextView
            android:textColor="#000000"
            android:layout_gravity="center|end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" هل أنت جاهز للعمل ؟"
            android:textSize="30dp"
            />
    </LinearLayout>
    <View
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>

   <LinearLayout
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="تعرف على ما يجعل الملف الشخصي ناجحا"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="اكتشف ما يجب فعله للتأكد من أنك على المسار الصحيح"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_favourite"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
</LinearLayout>
    <View
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:paddingHorizontal="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="قم بانشاء ملف تعريف البائع الخاص بك"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="أضف صورة الملف الشخصي و الوصف و المعلومات المهنية"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_info"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </LinearLayout>
    <View
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:paddingHorizontal="20dp"
        android:gravity="center|end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:paddingHorizontal="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                  android:textSize="20dp"
                android:text="انشر خدمتك"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView

                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="قم بنشر الخدمة التي تقدمها و ابدأ في البيع"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_info"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </LinearLayout>
    <View
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>

    <Button
        android:id="@+id/continueBtnId"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="استمرار"
        android:background="@drawable/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
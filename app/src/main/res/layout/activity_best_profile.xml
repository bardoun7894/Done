<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2"
    android:layout_height="match_parent"
    tools:context=".joinDoc.BestProfileActivity">

    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_black_back"
            />
        <TextView
            android:textColor="#000000"
            android:layout_gravity="center|end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" ما الذي يجعل ملف التعريف ناجحا ؟"
            android:textSize="20dp"
            />
    </LinearLayout>
    <View
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:ems="15"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text=" خذ وقتك في انشاء ملف التعريف الخاص بك حتى يكون كما تريده"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_favourite"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </LinearLayout>
    <View
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <LinearLayout
            android:paddingHorizontal="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:ems="15"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text=" اضف مهارتك المهنية بدقة لمساعدتك في الحصول على المزيد من العمل "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/edit"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>
    <View
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>
       <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <LinearLayout
            android:paddingHorizontal="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:ems="15"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="أضف المصداقية عن طريق الارتباط بشبكات التواصل الاجتماعي"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/chaine"
            android:layout_width="40dp"
            android:layout_height="50dp"/>
    </LinearLayout>
    <View
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>
       <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <LinearLayout
            android:paddingHorizontal="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:ems="15"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text=" للحصول على مجمع امن للجميع ,يتطلب التحقق من هويتك "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/shield"
            android:layout_width="40dp"
            android:layout_height="60dp"/>
    </LinearLayout>
    <View
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>


    <Button
        android:id="@+id/continueBestProfileBtnId"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="استمرار"
        android:background="@drawable/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
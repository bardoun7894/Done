<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceDetailsActivity">
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout
          android:id="@+id/image_of_service"
          android:background="@drawable/tasmim_kitab"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="250dp">
          <LinearLayout
              android:paddingHorizontal="10dp"
              android:paddingTop="3dp"
              android:background="@color/transparant_2"
              android:layout_width="match_parent"
              android:layout_height="40dp">
              <ImageView
                  android:src="@drawable/ic_back_arrow"
                  android:layout_width="40dp"
                  android:layout_height="40dp"/>
              <LinearLayout
                  android:gravity="end"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <ImageView
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:src="@drawable/ic_favourite"
                      />
                  <Space
                      android:layout_width="10dp"
                      android:layout_height="0dp"/>
                  <ImageView
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:src="@drawable/ic_share_24"
                      />
              </LinearLayout>
          </LinearLayout>
      </LinearLayout>

      <RelativeLayout
          android:background="@drawable/rectangle"
          android:padding="5dp"
          android:layout_width="match_parent"
          android:layout_height="60dp">

          <TextView
              android:id="@+id/username_detailId"
              android:textStyle="bold"
              android:textSize="16sp"
              android:gravity="center_vertical"
              android:layout_marginRight="60dp"
              android:layout_alignRight="@id/account_image_detailId"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:text="اسم الموظف "
              />
          <de.hdodenhof.circleimageview.CircleImageView
              android:layout_alignParentEnd="true"
              android:layout_alignParentRight="true"
              android:layout_gravity="right"
              android:id="@+id/account_image_detailId"
              android:layout_width="50dp"
              android:layout_height="match_parent"
              android:src="@drawable/ic_account"
              />

      </RelativeLayout>

      <LinearLayout

          android:layout_marginTop="10dp"
          android:orientation="vertical"
          android:gravity="right"
          android:layout_width="match_parent"
          android:layout_height="200dp">
          <TextView
              android:textSize="20sp"
              android:textStyle="bold"
              android:gravity="right"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="الخدمة المقدمة"
              />
          <TextView
              android:id="@+id/desc_detail"
              android:textSize="16sp"
              android:textStyle="bold"
              android:gravity="right"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="وصف و تفاصيل أكثر عن الخدمة"
              />
      </LinearLayout>

  </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_margin="2dp"
            android:background="@drawable/rectangle"
            android:padding="10dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="أسئلة متكررة"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:background="@drawable/rectangle"
            android:padding="10dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rating_details"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text=" 4.5 "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView

           android:layout_marginRight="5dp"
            android:src="@drawable/ic_star_rate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
       <TextView

                android:textStyle="bold"
                android:textSize="15sp"
                android:text=" التعليقات"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>
<Button
    android:id="@+id/btnOtlobId"
    android:textSize="20sp"
    android:textStyle="bold"
    android:text="أطلب"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>